@model IEnumerable<TruongNgocThanh_BigSchool.Models.Course>

@{
    ViewBag.Title = "ListMine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.Datetime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.Datetime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @course.LectureName
                    </span>
                    <br/>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
                <div class="action">
                    <a href="~/Course/DeleteMine?id=@course.Id">Delete</a>
                    <a href="~/Course/EditMine?id=@course.Id">Edit</a>
                </div>
            </li>
        }
    </ul>
</div>
